<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Views.UserRole.ExibirPermissoesUsuariosCollectionView"
             xmlns:local_dto="clr-namespace:EasyManagerApp.Dtos.Role"
             x:DataType="local_dto:RoleDto">

    <Border Padding="5"
            Style="{StaticResource CardBorderStyle}"
            WidthRequest="150">
        <Label x:Name="lblPermissaoUsuario"
               Text="{Binding RoleName}"
               Style="{StaticResource TitleTextStyle}"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Center" />
    </Border>
</ContentView>
