<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Views.Role.RoleCollectionView"
             xmlns:dto="clr-namespace:EasyManagerApp.Dtos.Role"
             x:DataType="dto:RoleDto">

    <Border Style="{StaticResource CardBorderStyle}"
            Margin="2">
        <Grid ColumnDefinitions="3*,*">
            <Label Text="{Binding RoleName}"
                   Style="{StaticResource SubtitleTextStyle}"
                   VerticalOptions="Center" />
            <Switch Grid.Column="1"
                    IsToggled="{Binding IsSelected}"
                    OnColor="{StaticResource PrimaryColor}"
                    VerticalOptions="Center"
                    HorizontalOptions="End" />
        </Grid>
    </Border>

</ContentView>