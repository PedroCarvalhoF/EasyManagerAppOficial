<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Views.Produto.ProdutoView"
             BackgroundColor="Transparent"
             xmlns:dto="clr-namespace:EasyManagerApp.Dtos.Produto"
             x:DataType="dto:ProdutoDto">
    <Border Padding="12"
            Background="White"
            StrokeThickness="0"
            StrokeShape="RoundRectangle 16"
            Margin="8,8,8,8">
        <Border.Shadow>
            <Shadow Brush="#00000022" Radius="8" Opacity="0.10" />
        </Border.Shadow>
        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnProdutoTapped" />
        </Border.GestureRecognizers>
        <VerticalStackLayout Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="{Binding CategoriaProduto}"
                   FontSize="12"
                   TextColor="#888"
                   HorizontalTextAlignment="Center" />
            <Label Text="{Binding NomeProduto}"
                   FontAttributes="Bold"
                   FontSize="15"
                   TextColor="#1d293d"
                   HorizontalTextAlignment="Center" />
            
          
        </VerticalStackLayout>
    </Border>
</ContentView>
