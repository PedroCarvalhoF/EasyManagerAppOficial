<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Views.Produto.ProdutoView"
             xmlns:prod="clr-namespace:EasyManagerApp.Dtos.Produto"
             x:DataType="prod:ProdutoDto"
             BackgroundColor="White">

    <Border Padding="10"
            Margin="5"
            BackgroundColor="White"
            Stroke="LightGray"
            StrokeThickness="1"
            StrokeShape="RoundRectangle 10">

        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="Categoria_Tapped" />
        </Border.GestureRecognizers>

        <Grid ColumnDefinitions="*,auto"
              ColumnSpacing="5"
              VerticalOptions="Center">

            <VerticalStackLayout Grid.Column="0"
                                 Spacing="1"
                                 VerticalOptions="Center">

                <Label Text="{Binding NomeProduto}"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="DarkSlateGray" />
                <HorizontalStackLayout Spacing="10">
                    <Label Text="{Binding CodigoProduto, StringFormat='CÃ³digo: {0}'}"
                           FontSize="13"
                           TextColor="Gray" />

                    <Label Text="{Binding CategoriaProduto}"
                           FontSize="13"
                           TextColor="DarkSlateGray" />
                </HorizontalStackLayout>

            </VerticalStackLayout>

            <Button Grid.Column="1"
                    x:Name="btnEditarProduto"
                    Clicked="btnEditarProduto_Clicked"
                    Text="Editar"
                    FontSize="12"
                    FontAttributes="Bold"
                    TextColor="#F5F3EF"
                    WidthRequest="100"
                    HeightRequest="1" />
        </Grid>

    </Border>
</ContentView>
