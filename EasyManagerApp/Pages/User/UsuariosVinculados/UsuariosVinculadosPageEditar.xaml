<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Pages.User.UsuariosVinculados.UsuariosVinculadosPageEditar"
             xmlns:model="clr-namespace:EasyManagerApp.DtosViewModel.UsuarioVinculadoCliente"
             x:DataType="model:UsuarioVinculadoClienteViewModel"
             Title="Editar Usuário Vinculado"
             BackgroundColor="#F5F6FA">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <!-- Informações do Cliente -->
            <Border StrokeShape="RoundRectangle 10"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    Padding="16">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Informações do Cliente"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#1d293d"/>
                    
                    <Label Text="{Binding ClienteNome}"
                           FontSize="16"
                           TextColor="DarkSlateGray"/>
                </VerticalStackLayout>
            </Border>

            <!-- Informações do Usuário -->
            <Border StrokeShape="RoundRectangle 10"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    Padding="16">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Informações do Usuário"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#1d293d"/>
                    
                    <Label Text="{Binding NomeUsuarioVinculado}"
                           FontSize="16"
                           TextColor="DarkSlateGray"/>
                    
                    <Label Text="{Binding EmailUsuarioVinculado}"
                           FontSize="14"
                           TextColor="Gray"/>
                </VerticalStackLayout>
            </Border>

            <!-- Controle de Acesso -->
            <Border StrokeShape="RoundRectangle 10"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    Padding="16">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Controle de Acesso"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#1d293d"/>
                    
                    <HorizontalStackLayout Spacing="8">
                        <Switch IsToggled="{Binding AcessoPermitido}"
                                OnColor="#1d293d"/>
                        <Label Text="Permitir acesso ao sistema"
                               VerticalOptions="Center"
                               TextColor="DarkSlateGray"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Botões de Ação -->
            <VerticalStackLayout Spacing="8">
                <Button Text="Salvar Alterações"
                        Command="{Binding LiberarBloquearAcessoCommand}"
                        BackgroundColor="#1d293d"
                        TextColor="White"
                        HeightRequest="50"/>
                
                <Button Text="Voltar"
                        Clicked="OnVoltarClicked"
                        BackgroundColor="Gray"
                        TextColor="White"
                        HeightRequest="50"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>