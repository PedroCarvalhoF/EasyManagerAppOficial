<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Pages.User.UsuariosVinculados.UsuariosVinculadosPageEditar"
             xmlns:model="clr-namespace:EasyManagerApp.DtosViewModel.Compostas"
             xmlns:modelview_user_role="clr-namespace:EasyManagerApp.Dtos.Role"
             xmlns:collection_view_permissoes="clr-namespace:EasyManagerApp.Views.Role"
             x:DataType="model:UsuarioVinculadoClienteEditarViewModel"
             xmlns:tookit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Behaviors>
        <tookit:StatusBarBehavior StatusBarColor="#123"
                                  StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <ScrollView>
        <VerticalStackLayout Padding="5"
                             Spacing="5">

            <Border Style="{StaticResource CardBorderStyle}">
                <Label Text="Alterar Usuário"
                       Style="{StaticResource TitleTextStyle}"
                       HorizontalOptions="Center" />
            </Border>
            <!-- Informações do Cliente -->
            <Border Style="{StaticResource CardBorderStyle}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Informações do Cliente"
                           Style="{StaticResource TitleTextStyle}" />
                    <Label Text="{Binding UsuarioVinculado.ClienteNome}"
                           Style="{StaticResource BodyTextStyle}" />
                </VerticalStackLayout>
            </Border>

            <!-- Informações do Usuário -->
            <Border Style="{StaticResource CardBorderStyle}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Informações do Usuário"
                           Style="{StaticResource TitleTextStyle}" />
                    <Label Text="{Binding UsuarioVinculado.NomeUsuarioVinculado}"
                           Style="{StaticResource BodyTextStyle}" />
                    <Label Text="{Binding UsuarioVinculado.EmailUsuarioVinculado}"
                           Style="{StaticResource BodyTextStyle}" />
                </VerticalStackLayout>
            </Border>

            <!-- Controle de Acesso -->
            <Border Style="{StaticResource CardBorderStyle}">
                <Grid ColumnDefinitions="2*,*"
                      Padding="5">
                    <VerticalStackLayout Grid.Column="0"
                                         Spacing="0">
                        <Label Text="Controle de Acesso"
                               Style="{StaticResource TitleTextStyle}" />
                        <Label x:Name="lblAcesso"
                               Text="Liberar acesso"
                               Style="{StaticResource BodyTextStyle}" />
                    </VerticalStackLayout>

                    <Switch Grid.Column="1"
                            WidthRequest="10"
                            IsToggled="{Binding UsuarioVinculado.AcessoPermitido}"
                            OnColor="{StaticResource PrimaryColor}"
                            Toggled="Switch_Toggled"
                            VerticalOptions="End"
                            HorizontalOptions="End" />
                </Grid>
            </Border>

            <!-- Botões de Ação -->
            <Grid ColumnDefinitions="auto,auto,*"
                  ColumnSpacing="5"
                  Margin="0,10,0,0">
                <Button Grid.Column="0"
                        Text="Voltar"
                        Clicked="OnVoltarClicked"
                        Style="{StaticResource SecondaryButtonStyle}" />
                <Button Grid.Column="1"
                        Text="Salvar"
                        Command="{Binding UsuarioVinculado.LiberarBloquearAcessoCommand}"
                        Style="{StaticResource PrimaryButtonStyle}" />

                <Button x:Name="btnEditarPermissoes"
                        Clicked="btnEditarPermissoes_Clicked"
                        Grid.Column="2"
                        Text="Permissões Avançadas"
                        Style="{StaticResource PrimaryButtonStyle}" />

            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>