<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Pages.User.UsuariosVinculados.UsuariosVinculadosPageEditar"
             xmlns:model="clr-namespace:EasyManagerApp.DtosViewModel.UsuarioVinculadoCliente"
             x:DataType="model:UsuarioVinculadoClienteViewModel"
             BackgroundColor="{StaticResource SecondaryColor}">

    <ScrollView>
        <VerticalStackLayout Padding="16"
                             Spacing="16">
            <!-- Informações do Cliente -->
            <Border Style="{StaticResource CardBorderStyle}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Informações do Cliente"
                           Style="{StaticResource TitleTextStyle}" />

                    <Label Text="{Binding ClienteNome}"
                           Style="{StaticResource SubtitleTextStyle}" />
                </VerticalStackLayout>
            </Border>

            <!-- Informações do Usuário -->
            <Border Style="{StaticResource CardBorderStyle}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Informações do Usuário"
                           Style="{StaticResource TitleTextStyle}" />

                    <Label Text="{Binding NomeUsuarioVinculado}"
                           Style="{StaticResource SubtitleTextStyle}" />

                    <Label Text="{Binding EmailUsuarioVinculado}"
                           Style="{StaticResource BodyTextStyle}" />
                </VerticalStackLayout>
            </Border>

            <!-- Controle de Acesso -->
            <Border Style="{StaticResource CardBorderStyle}">
                <HorizontalStackLayout Spacing="10"
                                       VerticalOptions="Center">

                    <Label Text="Controle de Acesso"
                           Style="{StaticResource TitleTextStyle}" />

                    <VerticalStackLayout Spacing="10">

                        <Switch IsToggled="{Binding AcessoPermitido}"
                                OnColor="{StaticResource PrimaryColor}"
                                Toggled="Switch_Toggled" />

                        <Label x:Name="lblAcesso"
                               Text="Liberar acesso"
                               Style="{StaticResource SubtitleTextStyle}"
                               VerticalOptions="Center" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Border>

            <!-- Botões de Ação -->
            <VerticalStackLayout Spacing="8">
                <Button Text="Salvar Alterações"
                        Command="{Binding LiberarBloquearAcessoCommand}"
                        Style="{StaticResource PrimaryButtonStyle}" />

                <Button Text="Voltar"
                        Clicked="OnVoltarClicked"
                        Style="{StaticResource SecondaryButtonStyle}" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>