<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Pages.User.UsuariosVinculados.UsuariosVinculadosPage"
             xmlns:view="clr-namespace:EasyManagerApp.Views.User"
             xmlns:model="clr-namespace:EasyManagerApp.DtosViewModel.UsuarioVinculadoCliente"
             x:DataType="model:UsuarioVinculadoClienteViewModel"
             Title="Usuários Vinculados"
             BackgroundColor="#F5F6FA">

    <Grid RowDefinitions="Auto,*,Auto"
          Padding="16">
        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   Placeholder="Buscar usuário"
                   Text="{Binding SearchText}"
                   Margin="0,0,0,8" />

        <!-- Lista de Usuários -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Usuarios}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <view:UsuariosVinculadosView />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Botão Adicionar -->
        <Button Grid.Row="2"
                Text="Vincular Novo Usuário"
                Command="{Binding VincularUsuarioCommand}"
                Margin="0,8,0,0"
                BackgroundColor="#1d293d"
                TextColor="White" />
    </Grid>
</ContentPage>