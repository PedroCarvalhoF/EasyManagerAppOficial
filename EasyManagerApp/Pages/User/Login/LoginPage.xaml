<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Pages.User.Login.LoginPage"             
             BackgroundColor="#1d293d" Shell.NavBarIsVisible="False">
    <Grid>
        <Border StrokeShape="RoundRectangle 16"
                Background="White"
                StrokeThickness="0"
                Padding="32,32,32,24"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                WidthRequest="380"
                MinimumWidthRequest="320">
            <Border.Shadow>
                <Shadow Brush="#00000022"
                        Radius="16"
                        Opacity="0.18" />
            </Border.Shadow>
            <VerticalStackLayout Spacing="18">
                <!-- Ícone topo -->
                <Image Source="easy_logo_01.png"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       WidthRequest="50" />
                <!-- Título -->
                <Label Text="Bem-vindo ao Easy Manager"
                       FontSize="22"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       TextColor="#1d293d" />
                <!-- Subtítulo -->
                <Label Text="Faça login para acessar o sistema"
                       FontSize="14"
                       TextColor="#888"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,0,8" />
                <!-- Nome -->
                <VerticalStackLayout Spacing="4">
                    <Label Text="E-mail"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="#1d293d" />
                    <Entry x:Name="txtEmail"
                           Text="admin@ec.com"
                           Placeholder="Informe seu e-mail"
                           Keyboard="Email"
                           TextColor="#1d293d"
                           BackgroundColor="#F5F6FA"
                           HeightRequest="44"
                           Margin="0,0,0,0"
                           FontSize="15" />
                </VerticalStackLayout>
                <!-- Senha -->
                <VerticalStackLayout Spacing="4">
                    <Label Text="Senha"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="#222" />
                    <Entry x:Name="txtSenha"
                           Text="123456"
                           TextColor="#1d293d"
                           Placeholder="********"
                           IsPassword="True"
                           BackgroundColor="#F5F6FA"
                           HeightRequest="44"
                           FontSize="15" />
                </VerticalStackLayout>
                <!-- Botão Entrar -->
                <Button x:Name="btnLogin"
                        Text="Entrar"
                        Clicked="btnLogin_Clicked"
                        BackgroundColor="#1d293d"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="44"
                        CornerRadius="8"
                        Margin="0,8,0,0" />
                <!-- Links -->
                <VerticalStackLayout Spacing="2"
                                     Margin="0,8,0,0">
                    <Label Text="Esqueceu sua senha?"
                           FontSize="13"
                           TextColor="#6A6A6A"
                           HorizontalTextAlignment="Center" />
                    <Label HorizontalTextAlignment="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Não possui cadastro? "
                                      FontSize="13"
                                      TextColor="#6A6A6A" />
                                <Span Text="Cadastre-se"
                                      FontSize="13"
                                      TextColor="#1d293d"
                                      FontAttributes="Bold">
                                    <Span.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="cadastrarNovoUsuario_Click" />
                                    </Span.GestureRecognizers>
                                </Span>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
                <!-- Botão oculto para cadastro -->
                <Button x:Name="btnCadastrarUsuario"
                        Clicked="btnCadastrarUsuario_Clicked"
                        IsVisible="False" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>