<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Pages.UserRole.UserRolePage"
             xmlns:colection="clr-namespace:EasyManagerApp.Views.UserRole"
             xmlns:model_local="clr-namespace:EasyManagerApp.DtosViewModel.Role"
             x:DataType="model_local:UserRoleViewModel"
             Title="Funções do Usário">

    <CollectionView ItemsSource="{Binding RolesPermissoes}"
                    Margin="12">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <colection:RoleCollectionView />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>