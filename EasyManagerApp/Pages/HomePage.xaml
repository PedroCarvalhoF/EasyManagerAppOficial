<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tookit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="EasyManagerApp.Pages.HomePage"
             Title="Menu"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Behaviors>
        <tookit:StatusBarBehavior StatusBarColor="#123"
                                  StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,Auto,Auto"
              Padding="20">
            <!-- Header Section -->
            <Grid Grid.Row="0"
                  ColumnDefinitions="*,Auto"
                  Margin="0,0,0,20">
                <VerticalStackLayout Grid.Column="0"
                                     Spacing="5">
                    <Label x:Name="lblBoasVindas"
                           Text="Usuário"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Gray900}" />
                    <Label x:Name="lblFilialSelecionada"
                           Text="Filial Selecionada"
                           FontSize="14"
                           TextColor="{StaticResource Gray600}" />
                </VerticalStackLayout>
            </Grid>

            <!-- Divider -->
            <BoxView Grid.Row="1"
                     HeightRequest="1"
                     BackgroundColor="{StaticResource Gray200}"
                     Margin="0,0,0,20" />

            <!-- Main Menu Cards -->
            <Grid Grid.Row="2"
                  ColumnDefinitions="*,*,*,*"
                  RowDefinitions="*,*"
                  ColumnSpacing="15"
                  RowSpacing="15"
                  Margin="0,0,0,20">

                <!-- Card 1 -->
                <Border Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="White"
                        Stroke="{StaticResource Gray200}"
                        StrokeShape="RoundRectangle 16"
                        Padding="15">
                    <Border.Shadow>
                        <Shadow Brush="#00000022"
                                Radius="8"
                                Opacity="0.10" />
                    </Border.Shadow>
                    
                    <VerticalStackLayout Spacing="8"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center">
                        <Image Source="menu_users.png"
                               WidthRequest="40"
                               HeightRequest="40"
                               Aspect="AspectFit" />
                        <Label Text="Usuários"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimaryColor}"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Card 2 -->
                <Border Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="White"
                        Stroke="{StaticResource Gray200}"
                        StrokeShape="RoundRectangle 16"
                        Padding="15">
                    <Border.Shadow>
                        <Shadow Brush="#00000022"
                                Radius="8"
                                Opacity="0.10" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="8"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center">
                        <Image Source="produto_icone.png"
                               WidthRequest="40"
                               HeightRequest="40"
                               Aspect="AspectFit" />
                        <Label Text="Produtos"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimaryColor}"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Card 3 -->
                <Border Grid.Row="0"
                        Grid.Column="2"
                        BackgroundColor="White"
                        Stroke="{StaticResource Gray200}"
                        StrokeShape="RoundRectangle 16"
                        Padding="15">
                    <Border.Shadow>
                        <Shadow Brush="#00000022"
                                Radius="8"
                                Opacity="0.10" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="8"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center">
                        <Image Source="estoque_icone.png"
                               WidthRequest="40"
                               HeightRequest="40"
                               Aspect="AspectFit" />
                        <Label Text="Estoque"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimaryColor}"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Card 4 -->
                <Border Grid.Row="0"
                        Grid.Column="3"
                        BackgroundColor="White"
                        Stroke="{StaticResource Gray200}"
                        StrokeShape="RoundRectangle 16"
                        Padding="15">
                    <Border.Shadow>
                        <Shadow Brush="#00000022"
                                Radius="8"
                                Opacity="0.10" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="8"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center">
                        <Image Source="dashboard_icone.png"
                               WidthRequest="40"
                               HeightRequest="40"
                               Aspect="AspectFit" />
                        <Label Text="Relatórios"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimaryColor}"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>              
            </Grid>      
            
            <!-- Other Functions Menu -->
            <VerticalStackLayout Grid.Row="4"
                                 Spacing="15">
               
                <Label Text="Outras Funções"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray900}"
                       Margin="0,0,0,10" />

                <Border BackgroundColor="White"
                        Stroke="{StaticResource Gray200}"
                        StrokeShape="RoundRectangle 16"
                        Padding="15">
                    <Border.Shadow>
                        <Shadow Brush="#00000022"
                                Radius="8"
                                Opacity="0.10" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Administração"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimaryColor}" />
                        <Label Text="Configurações avançadas do sistema"
                               FontSize="14"
                               TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Border>

                <Border BackgroundColor="White"
                        Stroke="{StaticResource Gray200}"
                        StrokeShape="RoundRectangle 16"
                        Padding="15">
                    <Border.Shadow>
                        <Shadow Brush="#00000022"
                                Radius="8"
                                Opacity="0.10" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Suporte"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimaryColor}" />
                        <Label Text="Central de ajuda e suporte"
                               FontSize="14"
                               TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
