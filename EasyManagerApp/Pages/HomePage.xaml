<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Pages.HomePage"
             BackgroundColor="#F5F6FA">
    <Grid RowDefinitions="220,*,Auto">
        <!-- Topo com gradiente, perfil e ícones -->
        <Grid Row="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#7B2FF2" Offset="0.0" />
                    <GradientStop Color="#F357A8" Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>
            <!-- Menu e notificações -->
            <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,32,0,0">
                <Image Source="menu.png" HeightRequest="28" WidthRequest="28" Margin="16,0,0,0" />
                <StackLayout Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image Source="profile_placeholder.png" HeightRequest="64" WidthRequest="64" Margin="0,0,0,8" BackgroundColor="White"  />
                    <Label Text="Ika Puspita Sari" FontSize="18" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center" />
                    <Label Text="@ikapuspitasari88" FontSize="13" TextColor="#E0D7F7" HorizontalTextAlignment="Center" />
                </StackLayout>
                <Image Source="notification.png" HeightRequest="28" WidthRequest="28" Grid.Column="2" Margin="0,0,16,0" />
            </Grid>
        </Grid>

        <!-- Conteúdo principal -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="18" Padding="16,0,16,0">
                <!-- Card de saldo -->
                <Frame CornerRadius="18" Padding="18" BackgroundColor="White" HasShadow="True" Margin="0,-40,0,0">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="My Balance" FontSize="15" TextColor="#888" />
                        <Label Text="Rp 1.000.000" FontSize="17" FontAttributes="Bold" TextColor="#7B2FF2" Grid.Column="1" />
                    </Grid>
                    <!-- Ações rápidas -->
                    <Grid ColumnDefinitions="*,*,*,*" Margin="0,18,0,0">
                        <StackLayout HorizontalOptions="Center">
                            <Image Source="send.png" HeightRequest="36" />
                            <Label Text="Send" FontSize="13" HorizontalTextAlignment="Center" />
                        </StackLayout>
                        <StackLayout HorizontalOptions="Center" Grid.Column="1">
                            <Image Source="pay.png" HeightRequest="36" />
                            <Label Text="Pay" FontSize="13" HorizontalTextAlignment="Center" />
                        </StackLayout>
                        <StackLayout HorizontalOptions="Center" Grid.Column="2">
                            <Image Source="topup.png" HeightRequest="36" />
                            <Label Text="Top Up" FontSize="13" HorizontalTextAlignment="Center" />
                        </StackLayout>
                        <StackLayout HorizontalOptions="Center" Grid.Column="3">
                            <Image Source="request.png" HeightRequest="36" />
                            <Label Text="Request" FontSize="13" HorizontalTextAlignment="Center" />
                        </StackLayout>
                    </Grid>
                </Frame>
                <!-- Grid de atalhos -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="18" RowSpacing="12">
                    <StackLayout>
                        <Image Source="eshopping.png" HeightRequest="32" />
                        <Label Text="E-Shopping" FontSize="13" />
                    </StackLayout>
                    <StackLayout Grid.Column="1">
                        <Image Source="bill.png" HeightRequest="32" />
                        <Label Text="Bill Payment" FontSize="13" />
                    </StackLayout>
                    <StackLayout Grid.Row="1">
                        <Image Source="charity.png" HeightRequest="32" />
                        <Label Text="Charity" FontSize="13" />
                    </StackLayout>
                    <StackLayout Grid.Row="1" Grid.Column="1">
                        <Image Source="gift.png" HeightRequest="32" />
                        <Label Text="Send Gift" FontSize="13" />
                    </StackLayout>
                    <StackLayout Grid.Row="2">
                        <Image Source="split.png" HeightRequest="32" />
                        <Label Text="Split Bills" FontSize="13" />
                    </StackLayout>
                    <StackLayout Grid.Row="2" Grid.Column="1">
                        <Image Source="cashback.png" HeightRequest="32" />
                        <Label Text="Cash Back" FontSize="13" />
                    </StackLayout>
                </Grid>
                <!-- Promoção -->
                <Frame CornerRadius="16" Padding="18" BackgroundColor="#7B2FF2" HasShadow="True">
                    <Grid ColumnDefinitions="Auto,*">
                        <Image Source="promo.png" HeightRequest="40" />
                        <StackLayout Grid.Column="1" Padding="12,0,0,0">
                            <Label Text="Saving Account" FontSize="16" FontAttributes="Bold" TextColor="White" />
                            <Label Text="Get up to 10% monthly interest!" FontSize="13" TextColor="#E0D7F7" />
                        </StackLayout>
                    </Grid>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*,*" BackgroundColor="White" HeightRequest="64" VerticalOptions="End">
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="wallet.png" HeightRequest="28" />
                <Label Text="My Wallet" FontSize="12" TextColor="#7B2FF2" />
            </StackLayout>
            <StackLayout Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="insight.png" HeightRequest="28" />
                <Label Text="Insight" FontSize="12" TextColor="#B0B0B0" />
            </StackLayout>
            <StackLayout Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="tool.png" HeightRequest="28" />
                <Label Text="Tool" FontSize="12" TextColor="#B0B0B0" />
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>
