<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Pages.Produto.ProdutosPage"
             Title="Produtos"
             xmlns:local="clr-namespace:EasyManagerApp.DtosViewModel.Produto"
             xmlns:view="clr-namespace:EasyManagerApp.Views.Produto"
             x:DataType="local:ProdutoViewModel">

    <Grid RowDefinitions="auto,*,auto"
          Padding="10">

        <Grid Grid.Row="1">

            <CollectionView Grid.Row="0"
                            ItemsSource="{Binding ProdutosDtos}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <view:ProdutoView />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>
        <Grid Grid.Row="2"
              ColumnDefinitions="*,*,*"
              RowSpacing="10"
              ColumnSpacing="5">

            <Button Grid.Column="0"
                    x:Name="btnUnidadeMedida"
                    Clicked="btnUnidadeMedida_Clicked"
                    Text="Medidas"
                    FontAttributes="None"
                    FontSize="Body"
                    BackgroundColor="DarkSlateGray" />

            <Button Grid.Column="1"
                    x:Name="btnCategoriaProduto"
                    Clicked="btnCategoriaProduto_Clicked"
                    Text="Categorias"
                    FontAttributes="None"
                    FontSize="Body"
                    BackgroundColor="DarkSlateGray" />

            <Button Grid.Column="2"
                    x:Name="btnCadastrarProduto"
                    Clicked="btnCadastrarProduto_Clicked"
                    Text="Novo Produto"
                    FontAttributes="None"
                    FontSize="Body"
                    BackgroundColor="DarkSlateGray" />
        </Grid>
    </Grid>
</ContentPage>