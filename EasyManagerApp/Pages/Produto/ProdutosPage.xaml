<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Pages.Produto.ProdutosPage">

    <Grid RowDefinitions="*,auto"
          Padding="10">

        <Grid Grid.Row="0">
            <StackLayout>
                <Label Text="Produtos"
                       HorizontalTextAlignment="Center" />
            </StackLayout>
        </Grid>
        <Grid Grid.Row="1"
              ColumnDefinitions="*"
              RowSpacing="10"
              ColumnSpacing="5">

            <Button Grid.Column="0"
                    x:Name="btnCategoriaProduto"
                    Clicked="btnCategoriaProduto_Clicked"
                    Text="Categorias"
                    FontAttributes="None"
                    FontSize="Body"
                    BackgroundColor="DarkSlateGray" />
        </Grid>
    </Grid>
</ContentPage>