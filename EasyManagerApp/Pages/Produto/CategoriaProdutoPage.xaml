<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Pages.Produto.CategoriaProdutoPage"
             xmlns:local="clr-namespace:EasyManagerApp.Dtos.ProdutoCategoria"
             xmlns:view="clr-namespace:EasyManagerApp.Views.ProdutoCategoria"
             x:DataType="local:CategoriaProdutoDto"
             BackgroundColor="#F5F6FA"
             Title="Categorias dos Produtos"
             Shell.NavBarIsVisible="True">
    <Grid>
        <!-- Grid principal para SearchBar e CollectionView -->
        <Grid Padding="16,16,16,0" RowDefinitions="Auto,*">
            <SearchBar x:Name="sBarCategoriaProduto"
                       Grid.Row="0"
                       Placeholder="Buscar categoria"
                       BackgroundColor="#F5F6FA"
                       HeightRequest="44"
                       Margin="0,0,0,8"
                       TextChanged="sBarCategoriaProduto_TextChanged" />
            <CollectionView Grid.Row="1"
                            x:Name="cvCategoriaProduto"
                            ItemsLayout="VerticalGrid, 2"
                            SelectionMode="None"
                            Margin="0,0,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <view:CategoriaProdutoView />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        <!-- BotÃ£o flutuante centralizado -->
        <Grid VerticalOptions="End" HorizontalOptions="Center" Padding="0,0,0,16">
            <Border StrokeShape="RoundRectangle 20" BackgroundColor="Transparent">
                <Border.Shadow>
                    <Shadow Brush="#00000022" Radius="8" Opacity="0.18" />
                </Border.Shadow>
                <Button Text="Cadastrar Nova Categoria"
                        x:Name="btnCadastrarCategoria"
                        Clicked="btnCadastrarCategoria_Clicked"
                        BackgroundColor="#1d293d"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        HeightRequest="48"
                        WidthRequest="240" />
            </Border>
        </Grid>
    </Grid>
</ContentPage>
