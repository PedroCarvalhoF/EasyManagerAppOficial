<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Pages.Produto.UnidadeMedidaProduto.UnidadeProdutoMedidaPage"
             Title="Unidade de Medida do Produto"
             xmlns:local_model="clr-namespace:EasyManagerApp.DtosViewModel.Produto.UnidadeMedida"
             xmlns:view="clr-namespace:EasyManagerApp.Views.Produto.UnidadeMedidaProduto"
             x:DataType="local_model:UnidadeMedidaProdutoViewModel">
    <VerticalStackLayout>

        <CollectionView Grid.Row="0"
                        ItemsSource="{Binding UnidadesMedidasProdutos}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <view:UnidadeMedidaProdutoView />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>