<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Pages.Produto.Estoque.Estoque.EstoqueProdutoPage"
             Title="Estoque"
             xmlns:view="clr-namespace:EasyManagerApp.Views.Produto.Estoque.Estoque"
             xmlns:model="clr-namespace:EasyManagerApp.DtosViewModel.Produto.Estoque.Estoque"
             xmlns:ctrl_estoque="clr-namespace:EasyManagerApp.Views.Produto.Estoque.Estoque"
             Shell.NavBarIsVisible="True"
             BackgroundColor="#F5F6FA">

    <Grid RowDefinitions="auto,*,auto"
          Padding="16,16,16,0"
          RowSpacing="10">

        <Grid Grid.Row="0"
              ColumnDefinitions="*"
              ColumnSpacing="10">

            <SearchBar x:Name="txtNomeCodigoProduto"
                       FontAttributes="Bold"
                       FontSize="16"
                       HeightRequest="44"
                       Grid.Column="0"
                       Placeholder="Pesquisar produto"
                       BackgroundColor="#F5F6FA"
                       Margin="0,0,0,8"
                       TextChanged="txtNomeCodigoProduto_TextChanged" />

        </Grid>

        <CollectionView Grid.Row="1"
                       ItemsSource="{Binding EstoqueProdutoDtos}"
                       SelectionMode="None"
                       Margin="0,0,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <view:EstoqueProdutoView ProdutoTapped="EstoqueProdutoView_ProdutoTapped" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="2"
              VerticalOptions="End"
              HorizontalOptions="Center"
              Padding="0,0,0,16">
            <Border StrokeShape="RoundRectangle 20" BackgroundColor="Transparent">
                <Border.Shadow>
                    <Shadow Brush="#00000022" Radius="8" Opacity="0.18" />
                </Border.Shadow>
                <Button x:Name="btnHistoricoMovimentacao"
                        Text="Histórico Movimentação"
                        FontSize="14"
                        WidthRequest="180"
                        HeightRequest="40"
                        CornerRadius="20"
                        BackgroundColor="#1d293d"
                        TextColor="White"
                        FontAttributes="Bold"
                        Clicked="btnHistoricoMovimentacao_Clicked"/>
            </Border>
        </Grid>
    </Grid>
</ContentPage>