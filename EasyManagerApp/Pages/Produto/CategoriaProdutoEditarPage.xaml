<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyManagerApp.Pages.Produto.CategoriaProdutoEditarPage"
             xmlns:categoria="clr-namespace:EasyManagerApp.Dtos.ProdutoCategoria"
             x:DataType="categoria:CategoriaProdutoDto"
             Title="Editar Categoria do Produto"
             Shell.NavBarIsVisible="True"
             BackgroundColor="#F5F6FA">
    <Grid>
        <ScrollView>
            <Grid>
                <VerticalStackLayout Spacing="18"
                                     Padding="24">

                    <Label Text="{Binding Id, StringFormat='ID: {0}'}"
                           FontSize="13"
                           TextColor="#888"
                           HorizontalOptions="Center"
                           Margin="0,0,0,8" />
                    <Border StrokeShape="RoundRectangle 16"
                            Background="White"
                            StrokeThickness="0"
                            Padding="24"
                            Margin="0,0,0,0">
                        <Border.Shadow>
                            <Shadow Brush="#00000022"
                                    Radius="12"
                                    Opacity="0.80" />
                        </Border.Shadow>
                        <VerticalStackLayout Spacing="14">
                            <Label Text="Categoria"
                                   FontSize="13"
                                   TextColor="#1d293d" />
                            <Entry x:Name="txtCategoria"
                                   Text="{Binding NomeCategoria}"
                                   Placeholder="Digite o nome da categoria"
                                   BackgroundColor="#F5F6FA"
                                   TextColor="#1d293d"
                                   PlaceholderColor="#A0A0A0"
                                   HeightRequest="40"
                                   FontSize="14" />
                            <HorizontalStackLayout>
                                <CheckBox IsChecked="{Binding Habilitado}"
                                          x:Name="chcCategoria"
                                          Color="#1d293d" />
                                <Label Text="Categoria habilitada"
                                       VerticalOptions="Center"
                                       FontSize="14" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                    <HorizontalStackLayout Spacing="12"
                                           HorizontalOptions="Center"
                                           Margin="0,16,0,0">
                        <Button x:Name="btnVoltar"
                                Text="Voltar"
                                BackgroundColor="#1d293d"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="16"
                                HeightRequest="45"
                                FontSize="14"
                                WidthRequest="110"
                                Clicked="btnVoltar_Clicked" />
                        <Button x:Name="btnAlterar"
                                Text="Salvar"
                                BackgroundColor="SeaGreen"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="16"
                                HeightRequest="45"
                                FontSize="14"
                                WidthRequest="180"
                                Clicked="btnAlterar_Clicked" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
