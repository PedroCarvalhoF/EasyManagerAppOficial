<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EasyManagerApp"
             x:Class="EasyManagerApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Font Resources -->
            <x:String x:Key="RobotoRegular">Roboto-VariableFont_wdth,wght.ttf#Roboto</x:String>
            <x:String x:Key="RobotoItalic">Roboto-Italic-VariableFont_wdth,wght.ttf#Roboto</x:String>

            <!-- Common Styles -->
            <Style TargetType="Label">
                <Setter Property="FontFamily"
                        Value="{StaticResource RobotoRegular}" />
                <Setter Property="TextColor"
                        Value="#1d293d" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="FontFamily"
                        Value="{StaticResource RobotoRegular}" />
                <Setter Property="HeightRequest"
                        Value="50" />
                <Setter Property="CornerRadius"
                        Value="8" />
                <Setter Property="TextColor"
                        Value="White" />
                <Setter Property="BackgroundColor"
                        Value="#512BD4" />
            </Style>

            <Style TargetType="Entry">
                <Setter Property="FontFamily"
                        Value="{StaticResource RobotoRegular}" />
                <Setter Property="HeightRequest"
                        Value="50" />
                <Setter Property="BackgroundColor"
                        Value="White" />
                <Setter Property="TextColor"
                        Value="#1d293d" />
                <Setter Property="PlaceholderColor"
                        Value="#666666" />
            </Style>

            <Style TargetType="SearchBar">
                <Setter Property="FontFamily"
                        Value="{StaticResource RobotoRegular}" />
                <Setter Property="BackgroundColor"
                        Value="White" />
                <Setter Property="TextColor"
                        Value="#1d293d" />
                <Setter Property="PlaceholderColor"
                        Value="#666666" />
            </Style>

            <!-- Common Colors -->
            <Color x:Key="PrimaryColor">#1d293d</Color>
            <Color x:Key="SecondaryColor">#F5F6FA</Color>
            <Color x:Key="TextPrimaryColor">#1d293d</Color>
            <Color x:Key="TextSecondaryColor">DarkSlateGray</Color>
            <Color x:Key="TextTertiaryColor">Gray</Color>

            <!-- Common Border Style -->
            <Style x:Key="CardBorderStyle"
                   TargetType="Border">
                <Setter Property="StrokeShape"
                        Value="RoundRectangle 10" />
                <Setter Property="Stroke"
                        Value="LightGray" />
                <Setter Property="StrokeThickness"
                        Value="1" />
                <Setter Property="BackgroundColor"
                        Value="White" />
                <Setter Property="Padding"
                        Value="16" />
            </Style>

            <!-- Common Text Styles -->
            <Style x:Key="TitleTextStyle"
                   TargetType="Label">
                <Setter Property="FontSize"
                        Value="18" />
                <Setter Property="FontAttributes"
                        Value="Bold" />
                <Setter Property="TextColor"
                        Value="{StaticResource PrimaryColor}" />
                <Setter Property="FontFamily"
                        Value="{StaticResource RobotoRegular}" />
            </Style>

            <Style x:Key="SubtitleTextStyle"
                   TargetType="Label">
                <Setter Property="FontSize"
                        Value="16" />
                <Setter Property="TextColor"
                        Value="{StaticResource TextSecondaryColor}" />
                <Setter Property="FontFamily"
                        Value="{StaticResource RobotoRegular}" />
            </Style>

            <Style x:Key="BodyTextStyle"
                   TargetType="Label">
                <Setter Property="FontSize"
                        Value="14" />
                <Setter Property="TextColor"
                        Value="{StaticResource TextTertiaryColor}" />
                <Setter Property="FontFamily"
                        Value="{StaticResource RobotoRegular}" />
            </Style>

            <!-- Button Styles -->
            <Style x:Key="PrimaryButtonStyle"
                   TargetType="Button">
                <Setter Property="BackgroundColor"
                        Value="{StaticResource PrimaryColor}" />
                <Setter Property="TextColor"
                        Value="White" />
                <Setter Property="FontFamily"
                        Value="{StaticResource RobotoRegular}" />
                <Setter Property="HeightRequest"
                        Value="40" />
                <Setter Property="CornerRadius"
                        Value="8" />
            </Style>

            <Style x:Key="SecondaryButtonStyle"
                   TargetType="Button">
                <Setter Property="BackgroundColor"
                        Value="Gray" />
                <Setter Property="TextColor"
                        Value="White" />
                <Setter Property="FontFamily"
                        Value="{StaticResource RobotoRegular}" />
                <Setter Property="HeightRequest"
                        Value="40" />
                <Setter Property="CornerRadius"
                        Value="5" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
